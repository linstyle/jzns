	<% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
<% end %>
-->
			
			  </ul>
			</div>
			<% end %>
	  </div> <!-- FLoginForm -->
	  
  
  </div><!-- FMainContent -->
   	
</div>

<%= render('common/footer') %>  <!-- 尾部 -->