<% if session[:user_id] %>
	<div class="FUserHeader">		
		<div class="FUserHeaderList">	
			<ul>
				<li style="margin-left:0px">
					<% if @is_follow.size!=0 %>
						<%= link_to('取消关注',:controller => 'user_index', :action => 'follow_common_event_cancel', :id=>"#{@event_id}") %>
					<% else %>
  					<%= link_to('关注此事件',:controller => 'user_index', :action => 'follow_common_event_add', :id=>"#{@event_id}") %>			
					<% end %>
				</li>

				<li>
					Hi,<%= @user.nick_name %> 大人.看事儿网恭迎您!
				</li>	  							

				<%= link_to(:controller => 'user_index', :action => 'setting') do %>		
	  			<% if 3==@select_link %>
	  				<li style="float:right;" class="HeaderLinkSelect">						  			
	  					设置
	  			<% else %>
	  				<li style="float:right;">
	  					设置
	  			<% end %>
	  				</li>		  
				<% end %>		
				
				<%= link_to(:controller => 'user_index', :action => 'about') do %>		
	  			<% if 4==@select_link %>
	  				<li style="float:right;" class="HeaderLinkSelect">						  			
	  					关于
	  			<% else %>
	  				<li style="float:right;">
	  					关于
	  			<% end %>
	  				</li>		  
				<% end %>						
												
				<li style="float:right;">
				  <%= link_to '退出', :controller => 'welcome', :action => 'logout' %>
				</li>				
				
				
			</ul>
	  </div> <!-- FUserHeaderList -->
	</div> <!-- FUserHeader -->	
	
<% else %>
	<div class="FHead">
	  	<span style="font-size: 24px"><%= link_to '看事儿网', :controller => 'welcome', :action => 'index' %></span>
	  	<span ><%= link_to '关于', :controller => 'welcome', :action => 'qiuxian' %>
	</div>
<% end %>

