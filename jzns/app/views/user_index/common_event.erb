<%= render('common/header') %>  <!-- 头部 -->

<div class="FMain">  
	
  <div class="FUserMainContent">
  	<ul class="FLabelEvent">
  	<% @events.each do |event| %>
  		<%= link_to(:controller => 'user_index', :action => 'click_common_event', :param=>'#{event.id}') do %>	
  		<li>
  			<div class="LabelEvent">  				
  				<div class="LabelEventTitle">
  					<%= event.title	%>	
  				</div>
  				
  				<div class="LabelEventAttr">
  					信息数:<%= event.message_count%>条	
  				</div>  				
  			</div>  			
  		</li>
  		<% end %>
  	<% end %>
  	</ul>
  	
	<!-- 翻页 -->
	<div align="center">
		<%= paginate @events %>
	</div>    	
  </div><!--FUserMainContent-->
  


  <%= render('common/footer') %>  <!-- 尾部 -->

</div>