<script language="javascript">   
/*输入框的内容长度变化提示*/
function CheckInputContentLength(Edit, maxlen) 
{
	
	if (Edit.value.length > maxlen) 
	{
		document.getElementById('send_button').disabled=true
		document.getElementById('send_button').className="link-btn-disable"
		document.getElementById('content_notic').innerHTML = "已经超出";
		
		document.getElementById('content_remaining').innerHTML = Edit.value.length-100;
	}
	else
	{
		document.getElementById('send_button').disabled=false
		document.getElementById('send_button').className="link-btn-send";
		document.getElementById('content_notic').innerHTML = "还可输入";
		document.getElementById('content_remaining').innerHTML = maxlen-Edit.value.length;
	}
}

</script> 


<%= render('common/header_common_page') %>  <!-- 头部 -->

<div class="FMain">  	
	<!-- 内容显示 -->
	<div class="FUserMessageContent">
		<!-- 输入内容框 -->		
	  <%= form_for @new_event_content, :url => { :controller => 'user_index', :action => 'send_common_content', :id=>"#{@event_id}"} do |f| %>
			<span id="content_notic">还可输入</span>
			<span id="content_remaining" style="font-weight:bold">140</span>字
			<div style="margin-left:0px">
				<%= f.text_area :content, :size => "87x4",:onkeydown=>"CheckInputContentLength(this, 140);",:onkeyup=>"CheckInputContentLength(this, 140);"%>
			</div>
			<div style="display:inline;">				
				<%= f.submit "发布" ,:disabled=>true,:class => "link-btn-disable",:id=>"send_button",:style=>"display:inline;"%>				
			</div>		
			插入图片 插入视频	
		<% end %>
		<!-- 成功或错误提示 -->
		
	  <% if flash[:notice] %>
			<div class="LabelSendMsgResult PublicNoticAreaRed">
		  	<font color=#B94A48><%= flash[:notice] %></font>	  	
		  </div>
	  <% end %>
	  
	  <ul class="FList1">
	  	<% @event_contents.each do |event_content| %>	
	  	<li>
				<div class="LabelMHead">

				</div>
					
				<div class="LabelMContent">
					<font color=#307D74><%=  event_content.user_nickname %>:</font>
					<%=  event_content.content%>
					
					<%= image_tag event_content.avatar.url %>
					<%= image_tag event_content.avatar.url(:medium) %>
					<%= image_tag event_content.avatar.url(:thumb) %>
						
					<div class="LabelAttr">
						<%= event_content.insert_time.strftime("%D %R") %>
					</div>
				</div>
				
				<div style="clear:both"></div>
				 		
	  	</li>
	  	<% end %>
	  </ul>
	  

	  	
		<!-- 翻页 -->
		<div align="center">
			
		</div>
	
	</div><!-- FUserMessageContent -->
	  
</div><!-- FMain -->

<%= render('common/footer') %>  <!-- 尾部 -->